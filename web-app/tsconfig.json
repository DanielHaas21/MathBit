{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@tailwind.config": ["./tailwind.config.ts"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": [
    "vite.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "./types/**/*.ts",
    "./scripts/*.ts",
    "app/index.page.tsx"
  ],
  "exclude": ["node_modules"]
}
